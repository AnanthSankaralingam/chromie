{
  "manifest_version": 3,
  "name": "Audio Capture",
  "version": "1.0.0",
  "description": "Audio recording",
  "permissions": [
    "offscreen",
    "tabCapture",
    "tabs",
    "activeTab",
    "sidePanel"
  ],
  "background": {
  "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Audio Recorder"
  }
}