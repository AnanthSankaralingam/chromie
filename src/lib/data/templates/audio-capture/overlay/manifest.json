{
  "manifest_version": 3,
  "name": "Audio Capture",
  "version": "1.0.0",
  "description": "Audio recording",
  "permissions": [
    "offscreen",
    "tabCapture",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Audio Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
